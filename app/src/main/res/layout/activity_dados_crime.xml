<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_dark_blue"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="25dp"
        android:layout_marginBottom="200dp"
        tools:context=".DadosCrimeActivity">

        <!--Logo da Empresa no topo esquerdo-->
        <ImageView
            android:id="@+id/imageViewLogoEmpresa2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/logo_cespeds_lourenco_adv_negativo" />

        <!-- Título centralizado abaixo da logo -->
        <TextView
            android:id="@+id/textViewTitulo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="INSIRA OS DADOS DA PENA"
            android:textColor="@color/white"
            android:textSize="23sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@+id/imageViewLogoEmpresa2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Seção: Tempo Total da Pena -->
        <TextView
            android:id="@+id/textViewPena"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Tempo Total da Pena:"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@+id/imageViewLogoEmpresa2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Linha: Anos, Meses, Dias da Pena -->
        <LinearLayout
            android:id="@+id/linhaPena"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="3dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewPena"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:boxBackgroundColor="@color/white"
                app:cornerRadius="8dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputPenaAnos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Anos"
                    android:inputType="number"
                    android:textColor="@color/black" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:boxBackgroundColor="@color/white"
                app:cornerRadius="8dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputPenaMeses"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Meses"
                    android:inputType="number"
                    android:textColor="@color/black" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:boxBackgroundColor="@color/white"
                app:cornerRadius="8dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputPenaDias"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Dias"
                    android:inputType="number"
                    android:textColor="@color/black" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <!-- Data de Início -->
        <TextView
            android:id="@+id/textViewDataInicio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Data de Início do Cumprimento da Pena:"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/linhaPena"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutDataInicio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="3dp"
            app:boxBackgroundColor="@color/white"
            app:cornerRadius="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewDataInicio"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputDataInicio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="DD/MM/AAAA"
                android:textColor="@color/black"
                android:focusable="false"
                android:clickable="true" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Seção: Tempo de Detração -->
        <TextView
            android:id="@+id/textViewDetracao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Tempo de Detração:"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/layoutDataInicio"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Linha: Anos, Meses, Dias da Detração -->
        <LinearLayout
            android:id="@+id/linhaDetracao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewDetracao"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="3dp"
                app:boxBackgroundColor="@color/white"
                app:cornerRadius="8dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputDetracaoAnos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Anos"
                    android:inputType="number"
                    android:textColor="@color/black" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:boxBackgroundColor="@color/white"
                app:cornerRadius="8dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputDetracaoMeses"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Meses"
                    android:inputType="number"
                    android:textColor="@color/black" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:boxBackgroundColor="@color/white"
                app:cornerRadius="8dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputDetracaoDias"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Dias"
                    android:inputType="number"
                    android:textColor="@color/black" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <!-- Tipo de Crime -->
        <TextView
            android:id="@+id/textViewTipoCrime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Tipo de Crime:"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/linhaDetracao"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Tipo de Crime -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutTipoCrime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="3dp"
            app:boxBackgroundColor="@color/white"
            app:cornerRadius="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewTipoCrime"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:endIconMode="dropdown_menu"
            app:endIconDrawable="@drawable/ic_arrow_drop_down">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/inputTipoCrime"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Selecione o tipo de crime"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:paddingStart="16dp"
                android:inputType="none"
                android:focusable="false"
                android:clickable="true" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Status do Apenado -->
        <TextView
            android:id="@+id/textViewStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Status do Apenado:"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/layoutTipoCrime"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="3dp"
            app:boxBackgroundColor="@color/white"
            app:cornerRadius="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewStatus"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:endIconMode="dropdown_menu"
            app:endIconDrawable="@drawable/ic_arrow_drop_down">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/inputStatus"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Selecione o status"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:paddingStart="16dp"
                android:inputType="none"
                android:focusable="false"
                android:clickable="true" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Dias Trabalhados -->
        <TextView
            android:id="@+id/textViewDiasTrabalhados"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Dias Trabalhados:"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/layoutStatus"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutDiasTrabalhados"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="3dp"
            app:boxBackgroundColor="@color/white"
            app:cornerRadius="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewDiasTrabalhados"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputDiasTrabalhados"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Quantidade de dias trabalhados"
                android:inputType="number"
                android:textColor="@color/black" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Horas de Estudo -->
        <TextView
            android:id="@+id/textViewHorasEstudo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Horas de Estudo:"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/layoutDiasTrabalhados"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutHorasEstudo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="3dp"
            app:boxBackgroundColor="@color/white"
            app:cornerRadius="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewHorasEstudo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputHorasEstudo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Total de horas de estudo"
                android:inputType="number"
                android:textColor="@color/black" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Livros Lidos -->
        <TextView
            android:id="@+id/textViewLivrosLidos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Quantidade de Livros Lidos:"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/layoutHorasEstudo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutLivrosLidos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="3dp"
            app:boxBackgroundColor="@color/white"
            app:cornerRadius="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewLivrosLidos"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputLivrosLidos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Número de livros lidos"
                android:inputType="number"
                android:textColor="@color/black" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Dias de Atividades Complementares -->
        <TextView
            android:id="@+id/textViewAtividades"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Dias de Atividades Complementares:"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/layoutLivrosLidos"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutAtividades"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="3dp"
            app:boxBackgroundColor="@color/white"
            app:cornerRadius="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewAtividades"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputAtividades"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Dias de atividades complementares"
                android:inputType="number"
                android:textColor="@color/black" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Regime Atual -->
        <TextView
            android:id="@+id/textViewRegime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Regime Atual:"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/layoutAtividades"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutRegime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:layout_marginTop="3dp"
            app:boxBackgroundColor="@color/white"
            app:cornerRadius="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewRegime"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:endIconMode="dropdown_menu"
            app:endIconDrawable="@drawable/ic_arrow_drop_down">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/inputRegime"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:clickable="true"
                android:focusable="false"
                android:hint="Selecione o regime atual"
                android:inputType="none"
                android:paddingStart="16dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Botão Calcular -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonCalcular"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="CALCULAR"
            android:textAllCaps="true"
            android:textColor="@color/dark_blue"
            android:textSize="16sp"
            android:textStyle="bold"
            app:backgroundTint="@color/light_blue"
            app:cornerRadius="25dp"
            android:layout_marginBottom="250dp"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/layoutRegime"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Botão para voltar-->
        <Button
            android:id="@+id/buttonVoltarCadastro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="voltar"
            android:textAllCaps="true"
            android:textColor="@color/light_blue_text"
            android:textStyle="bold"
            android:textSize="16sp"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toBottomOf="@id/buttonCalcular"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Espaço entre final da tela e button de Calcular-->
        <View
            android:layout_width="match_parent"
            android:layout_height="230dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonCalcular"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>