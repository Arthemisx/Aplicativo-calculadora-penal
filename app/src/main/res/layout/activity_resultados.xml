<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="0dp"
        tools:context=".ResultadosActivity">

        <!-- Logo da Empresa no topo esquerdo -->
        <ImageView
            android:id="@+id/imageViewLogoEmpresa"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/logo_cespeds_lourenco_adv_negativo" />

        <!-- Título centralizado abaixo da logo -->
        <TextView
            android:id="@+id/textViewTitulo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="RESULTADOS"
            android:textColor="@color/white"
            android:textSize="23sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@+id/imageViewLogoEmpresa"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Seção Datas Previstas - Fundo Dark Blue (Faixa) -->
        <LinearLayout
            android:id="@+id/faixaDatasPrevistas"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:orientation="vertical"
            android:background="@color/dark_blue"
            android:paddingVertical="20dp"
            android:paddingHorizontal="25dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewTitulo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Título da Seção -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DATAS PREVISTAS PARA PROGRESSÃO AO:"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <!-- Regime Semiaberto -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="REGIME SEMIABERTO:"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/textSemiaberto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

            </LinearLayout>

            <!-- Regime Aberto -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="REGIME ABERTO:"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/textAberto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

            </LinearLayout>

            <!-- Livramento Condicional -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="LIVRAMENTO CONDICIONAL:"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/textLivramento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Seção Outras Informações - Fundo Beige (Faixa) -->
        <LinearLayout
            android:id="@+id/faixaOutrasInformacoes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/beige"
            android:paddingVertical="20dp"
            android:paddingHorizontal="25dp"
            app:layout_constraintTop_toBottomOf="@+id/faixaDatasPrevistas"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Título da Seção -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="OUTRAS INFORMAÇÕES:"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <!-- Dias de Remição -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DIAS DE REMIÇÃO:"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/textDiasRemicao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

            </LinearLayout>

            <!-- Detalhes da Remição -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DETALHES DA REMIÇÃO:"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/textDetalhesRemicao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

            </LinearLayout>

            <!-- Observações -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="OBSERVAÇÕES:"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/textObservacoes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:lineSpacingExtra="4dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Seção PRECISA DE ADVOGADO? -->
        <LinearLayout
            android:id="@+id/faixaPrecisaAdvogado"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/light_blue"
            android:paddingVertical="20dp"
            android:paddingHorizontal="25dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/faixaOutrasInformacoes"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Título da Seção -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PRECISA DE ADVOGADO?"
                android:textColor="@color/white"
                android:textSize="23sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

            <!-- Subtítulo -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PREENCHA OS CAMPOS ABAIXO:"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="20dp" />

            <!-- Campo Nome Completo -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutNome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:errorEnabled="true"
                app:boxBackgroundColor="@color/white"
                app:boxCornerRadiusTopStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxStrokeColor="@color/black"
                app:hintTextColor="@color/black"
                app:errorTextColor="@color/red">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextNome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nome completo:*"
                    android:inputType="textPersonName"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Campo WhatsApp -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutWhatsApp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:errorEnabled="true"
                app:boxBackgroundColor="@color/white"
                app:boxCornerRadiusTopStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxStrokeColor="@color/white"
                app:hintTextColor="@color/black"
                app:errorTextColor="@color/red">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextWhatsApp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Número de WhatsApp:*"
                    android:inputType="phone"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Campo E-mail -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                app:boxBackgroundColor="@color/white"
                app:boxCornerRadiusTopStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxStrokeColor="@color/white"
                app:hintTextColor="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="E-mail:"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Campo Número do Processo -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutProcesso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:errorEnabled="true"
                app:boxBackgroundColor="@color/white"
                app:boxCornerRadiusTopStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxStrokeColor="@color/white"
                app:hintTextColor="@color/black"
                app:errorTextColor="@color/red">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextProcesso"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Número do Processo:"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Campo Mensagem -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutMensagem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:boxBackgroundColor="@color/white"
                app:boxCornerRadiusTopStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxStrokeColor="@color/white"
                app:hintTextColor="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextMensagem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Mensagem:"
                    android:inputType="text"
                    android:maxLines="5"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Botão Enviar -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonEnviar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Enviar"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                app:backgroundTint="@color/light_blue_text"
                app:cornerRadius="25dp"
                android:layout_marginBottom="20dp"
                android:enabled="false" />

            <!-- Seção CONTATE-NOS -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CONTATE-NOS:"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <!-- E-mail -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="contato@caspedesbourncoadvogados.com.br"
                android:textColor="@color/blue"
                android:textSize="14sp"
                android:autoLink="email"
                android:layout_marginBottom="8dp" />

            <!-- Telefones -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(11) 4330-4557\n(11) 93008-3998"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />

            <!-- Endereço -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Av. Senador Vergueiro 2123 – cj. 1905 – Anchieta\nSão Bernardo do Campo/SP – CEP 09601-000"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginBottom="20dp" />

            <!-- Botão WhatsApp -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonWhatsApp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="QUERO FALAR COM UM ADVOGADO"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                app:backgroundTint="@color/green"
                app:cornerRadius="25dp"
                app:icon="@drawable/ic_whatsapp"
                app:iconGravity="textStart"
                app:iconPadding="8dp" />

        </LinearLayout>

        <!-- Botão Voltar -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonVoltar"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="VOLTAR"
            android:textAllCaps="true"
            android:textColor="@color/light_blue_text"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@android:color/transparent"
            app:cornerRadius="25dp"
            android:layout_marginBottom="32dp"
            android:layout_marginHorizontal="25dp"
            app:layout_constraintTop_toBottomOf="@+id/faixaPrecisaAdvogado"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Espaço no final -->
        <View
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonVoltar"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>